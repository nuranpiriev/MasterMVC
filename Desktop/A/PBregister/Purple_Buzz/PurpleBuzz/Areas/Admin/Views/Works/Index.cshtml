@using PurpleBuzz.Models;
@model IEnumerable<Work>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Works</h1>
    <div class="d-flex justify-content-end mb-2">
        <a asp-area="Admin" asp-controller="Works" asp-action="Create">
            <button class="btn btn-success">Add Work</button>
        </a>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Work title</th>
                            <th>Work description</th>
                            <th>Work image</th>
                            <th>Created at</th>
                            <th>Updated at</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Work item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.ImageURL</td>
                                <td>@item.CreatedAt</td>
                                <td>@(item.UpdatedAt == null ? "Awaiting First Update" : item.UpdatedAt)</td>
                                <td class="text-center">
                                    <a asp-area="Admin" asp-controller="Works" asp-action="Edit" asp-route-id="@item.Id">
                                        <button class="btn btn-primary">
                                            <i class="fa-solid fa-pen"></i>
                                        </button>
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a asp-area="Admin" asp-controller="Works" asp-action="Delete" asp-route-id="@item.Id">
                                        <button class="btn btn-danger">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->