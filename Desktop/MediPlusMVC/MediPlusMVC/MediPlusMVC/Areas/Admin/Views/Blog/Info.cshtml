@using MediPlusMVC.Models;
@model Blog;
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">@Model.Title</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Created at</th>
                            <th>Updated at</th>
                            <th>Deleted at</th>
                            <th>Update</th>
                            @if(Model.isActive)
                            {
                                <th>Soft Delete</th>
                            }else{
                                <th>Hard Delete</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                            <td class="text-center">@Model.CreatedAt</td>
                            <td class="text-center">@(Model.UpdatedAt == null ? "-" : Model.UpdatedAt)</td>
                            <td class="text-center">@(Model.DeletedAt == null ? "-" : Model.DeletedAt)</td>
                            <td class="text-center">
                                    <button class="btn btn-warning">Update</button>
                                </td>
                            <td class="text-center">
                                @if (Model.isActive)
                                {
                                    <button class="btn btn-danger">Soft Delete</button>
                                }
                                else
                                {
                                <button class="btn btn-danger">Hard Delete</button>
                                }
                                </td>
                            </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->